<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:id="@+id/session_tabs_container"
                android:background="#111111"
                android:visibility="gone"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/session_tabs"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
            <com.termux.view.TerminalView
                android:id="@+id/terminal_view"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <HorizontalScrollView
                android:background="#1a1a1a"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_esc"
                        android:text="ESC"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_ctrl"
                        android:text="CTRL"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_alt"
                        android:text="ALT"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_tab"
                        android:text="TAB"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_home"
                        android:text="HOME"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_up"
                        android:text="▲"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_end"
                        android:text="END"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_pgup"
                        android:text="PGUP"
                        style="@style/ExtraKeyButton"/>
                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:background="#1a1a1a"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_dash"
                        android:text="-"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_slash"
                        android:text="/"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_backslash"
                        android:text="\\"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_pipe"
                        android:text="|"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_left"
                        android:text="◀"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_down"
                        android:text="▼"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_right"
                        android:text="▶"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_pgdn"
                        android:text="PGDN"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_tilde"
                        android:text="~"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_underscore"
                        android:text="_"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_colon"
                        android:text=":"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:id="@+id/btn_quote"
                        android:text="&quot;"
                        style="@style/ExtraKeyButton"/>
                    <Button
                        android:textSize="18sp"
                        android:id="@+id/btn_more"
                        android:text="≡"
                        style="@style/ExtraKeyButton"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <ScrollView
            android:layout_gravity="start"
            android:background="#1a1a1a"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/nav_drawer"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MobileCLI"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:paddingBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile AI Development"/>
                <View
                    android:background="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SESSIONS"
                    android:paddingStart="8dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/sessions_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#4caf50"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_new_session"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="+ New Session"
                    android:paddingStart="8dp"/>
                <View
                    android:background="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MENU"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_settings"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Settings"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_keyboard"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Toggle Keyboard"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_text_size"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Text Size"
                    android:paddingStart="8dp"/>
                <View
                    android:background="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_install_ai"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Install AI Tools"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_help"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Help"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_about"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="About"
                    android:paddingStart="8dp"/>
                <View
                    android:background="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#00ff88"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POWER MODE"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_wake_lock"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="⚡ Wake Lock: OFF"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_claude_power"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="�� Claude Power Mode: OFF"
                    android:paddingStart="8dp"/>
                <View
                    android:id="@+id/dev_options_divider"
                    android:background="#333333"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff6b6b"
                    android:id="@+id/nav_dev_options_header"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEVELOPER"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ff6b6b"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_dev_mode"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Developer Mode: ON"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#ff6b6b"
                    android:gravity="center_vertical"
                    android:id="@+id/nav_install_dev_tools"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Install Dev Tools"
                    android:paddingStart="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:id="@+id/nav_version"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.1.0"/>
            </LinearLayout>
        </ScrollView>
    </androidx.drawerlayout.widget.DrawerLayout>
    <FrameLayout
        android:id="@+id/setup_overlay"
        android:background="#ffffff"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/setup_progress_screen"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#6750a4"
                android:gravity="center"
                android:id="@+id/setup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="MobileCLI"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#49454f"
                android:gravity="center"
                android:id="@+id/setup_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:text="AI-Powered Terminal"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#1c1b1f"
                android:gravity="center"
                android:id="@+id/setup_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Setting up your environment..."/>
            <ProgressBar
                android:id="@+id/setup_progress"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="16dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#6750a4"
                android:progressBackgroundTint="#e7e0ec"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:textSize="18sp"
                android:textColor="#6750a4"
                android:gravity="center"
                android:id="@+id/setup_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="0%"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#79747e"
                android:gravity="center"
                android:id="@+id/setup_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/ai_choice_screen"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1c1b1f"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:text="Choose Your AI"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#49454f"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Select an AI assistant to power your development"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ai_card_claude"
                    android:background="@drawable/ai_card_background"
                    android:padding="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#6750a4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Claude"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#6750a4"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECOMMENDED"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="by Anthropic"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The most capable AI for coding. Builds entire apps, debugs complex issues, and writes production-quality code."/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ai_card_gemini"
                    android:background="@drawable/ai_card_background"
                    android:padding="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#4285f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gemini"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="by Google"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Google&apos;s multimodal AI. Great for research, documentation, and general development tasks."/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ai_card_codex"
                    android:background="@drawable/ai_card_background"
                    android:padding="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#10a37f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codex"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="by OpenAI"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OpenAI&apos;s code-focused model. Specializes in code completion and generation."/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ai_card_none"
                    android:background="@drawable/ai_card_background"
                    android:padding="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#79747e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Terminal"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Skip AI for now"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#49454f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Linux terminal without AI. You can install AI tools later from settings."/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_gravity="end|top"
            android:id="@+id/dev_mode_trigger"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <FrameLayout
            android:id="@+id/welcome_overlay"
            android:background="#000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="80sp"
                    android:textStyle="bold"
                    android:textColor="#00ff88"
                    android:id="@+id/welcome_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&gt;_"
                    android:alpha="0"
                    android:fontFamily="monospace"/>
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/welcome_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Welcome to the future"
                    android:alpha="0"/>
                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#00ff88"
                    android:id="@+id/welcome_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="of AI development"
                    android:alpha="0"/>
                <TextView
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/welcome_subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="MobileCLI Terminal AI"
                    android:alpha="0"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
