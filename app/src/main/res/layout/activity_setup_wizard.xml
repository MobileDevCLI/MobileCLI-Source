<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading_section"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="#00ff88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;_"
            android:fontFamily="monospace"/>
        <TextView
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="MobileCLI"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#00ff88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="AI-Powered Terminal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ProgressBar
            android:id="@+id/setup_progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#00ff88"
            android:progressBackgroundTint="#1a1a1a"
            android:layout_marginHorizontal="48dp"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#a0a0a0"
            android:gravity="center"
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Preparing your environment..."/>
        <TextView
            android:textSize="12sp"
            android:textColor="#505050"
            android:gravity="center"
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="First launch takes a few minutes"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/welcome_overlay"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="80sp"
                android:textStyle="bold"
                android:textColor="#00ff88"
                android:id="@+id/welcome_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;_"
                android:alpha="0"
                android:fontFamily="monospace"/>
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/welcome_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Welcome to the future"
                android:alpha="0"/>
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#00ff88"
                android:id="@+id/welcome_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="of AI development"
                android:alpha="0"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#606060"
                android:id="@+id/welcome_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="MobileCLI Terminal AI"
                android:alpha="0"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
